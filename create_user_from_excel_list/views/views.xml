<odoo>
    <data>
        <record id="view_import_users" model="ir.ui.view">
            <field name="name">import.users.form</field>
            <field name="model">import.users</field>
            <field name="arch" type="xml">
                <form string="Import File">
                    <div>
                        <h3>The sample xls format for users file :
                            <a href="/create_user_from_excel_list/static/src/data/sample_data.xlsx">
                                <br/>
                                sample_data.xlsx
                            </a>
                        </h3>
                    </div>
                    <h3>Select a excel file to import</h3>
                    <field name="filename" invisible="1"/>
                    <field name="data_file" filename="filename" placeholder="Choose a file to import..."/>
                    <footer>
                        <button name="import_file" string="Import" type="object" class="btn-primary"/>
                        <button string="Cancel" class="btn-default" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>
        <record id="view_list_error" model="ir.ui.view">
            <field name="name">import.users.list.error</field>
            <field name="model">import.users</field>
            <field name="arch" type="xml">
                <form string="Export List Error">
                    <h3>Import Done! Some records were not created because of an error:</h3>
                    <field name="filename" invisible="1"/>
                    <field name="file_error" readonly="1" filename="filename"/>
                    <footer>
                        <button name="reload_tree_view" type="object" string="OK" class="oe_highlight"/>
                    </footer>
                </form>
            </field>
        </record>
    </data>
</odoo>