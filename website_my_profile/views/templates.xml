<odoo>
    <data>
        <template id="add_more_details" name="Add and remove some fields"
                  inherit_id="website_portal.details">
            <!--add login field-->
            <xpath expr="//div[contains(label, 'Email')]" position="after">
                <div t-attf-class="form-group #{error.get('login') and 'has-error' or ''} col-lg-6">
                    <label class="control-label" for="login">Login</label>
                    <input type="text" name="login" class="form-control" t-att-value="login" readonly="readonly"/>
                </div>
            </xpath>
            <!--remove company name field-->
            <xpath expr="//div[contains(label, 'Company Name')]" position="replace">
            </xpath>
            <!--remove VAT number field-->
            <xpath expr="//div[@t-if='has_check_vat']" position="replace">
            </xpath>
            <!--remove Zip / Postal Code field-->
            <xpath expr="//div[contains(label, 'Zip')]" position="replace">
            </xpath>
            <!--add phone field-->
            <xpath expr="//div[contains(label, 'Phone')]" position="after">
                <div t-attf-class="form-group #{error.get('birthday') and 'has-error' or ''} col-lg-6">
                    <label class="control-label" for="birthday">Birthday</label>
                    <input type="date" name="birthday" class="form-control" t-att-value="birthday or partner.birthday"/>
                </div>
                <div t-attf-class="form-group #{error.get('gender') and 'has-error' or ''} col-lg-6">
                    <label class="control-label" for="gender">Gender</label>
                    <select name="gender" class="form-control">
                        <t t-foreach="genders or []" t-as="gender">
                            <option t-att-value="gender" t-att-selected="gender == partner.gender">
                                <t t-esc="gender"/>
                            </option>
                        </t>
                    </select>
                </div>
                <div t-attf-class="form-group #{error.get('active') and 'has-error' or ''} col-lg-6">
                    <label class="control-label" for="active">Active</label>
                    <input type="text" name="active" class="form-control" t-att-value="active"
                           readonly="readonly"/>
                </div>
            </xpath>
        </template>

        <template id="button_reset_password_and_email" name="Button change login and password"
                  inherit_id="website_portal.details">
            <xpath expr="//div[@class='col-md-8']/div[@class='row']" position="before">
                <div class="clearfix">
                    <!--button change password-->
                    <a href="/web/reset_password_direct" class="btn btn-default btn-primary pull-right">Change Password
                    </a>
                    <!--button change login-->
                    <a href="/web/change_email" class="btn btn-default btn-primary pull-left">Change Login</a>
                </div>
            </xpath>
        </template>

        <template id="website_my_profile.fields_reset" name="Reset password fields">
            <div class="form-group field-old_password">
                <label for="old_password" class="control-label">Old Password</label>
                <input type="password" name="old_password" id="old_password" class="form-control"
                       required="required"  autofocus="autofocus"/>
            </div>

            <div class="form-group field-new_password">
                <label for="new_password" class="control-label">New Password</label>
                <input type="password" name="new_password" id="new_password" class="form-control"
                       required="required"/>
            </div>

            <div class="form-group field-retype_password">
                <label for="retype_password" class="control-label">Retype New Password</label>
                <input type="password" name="retype_password" id="retype_password" class="form-control"
                       required="required"/>
            </div>
        </template>

        <template id="website_my_profile.form_reset" name="Reset password form">
            <t t-call="web.login_layout">
                <p class="alert alert-success" t-if="message">
                    <t t-esc="message"/>
                </p>

                <form class="oe_reset_password_form" role="form" method="post" t-if="not message">
                    <input type="hidden" name="csrf_token" t-att-value="request.csrf_token()"/>

                    <t t-call="website_my_profile.fields_reset"/>

                    <p class="alert alert-danger" t-if="error">
                        <t t-esc="error"/>
                    </p>

                    <input type="hidden" name="redirect" t-att-value="redirect"/>
                    <input type="hidden" name="token" t-att-value="token"/>
                    <div class="clearfix oe_login_buttons">
                        <a href="/my/home" class="btn btn-link pull-right">Go Back Home</a>
                        <button type="submit" class="btn btn-primary pull-left">Confirm</button>
                    </div>
                </form>
                <a href="/my/home" class="btn btn-link pull-right">Go Back Home</a>
            </t>
        </template>

        <template id="website_my_profile.fields_email" name="Change email fields">
            <div class="form-group field-login">
                <label for="email" class="control-label">Login Name</label>
                <input type="text" name="login" id="login" class="form-control" t-att-value="login"
                       required="required" autofocus="autofocus"/>
            </div>

            <div class="form-group field-password">
                <label for="password" class="control-label">Your Password</label>
                <input type="password" name="password" id="password" class="form-control"
                       required="required"/>
            </div>
        </template>

        <template id="website_my_profile.form_email" name="Change email form">
            <t t-call="web.login_layout">
                <p class="alert alert-success" t-if="message">
                    <t t-esc="message"/>
                </p>
                <form class="oe_reset_password_form" role="form" method="post" t-if="not message">
                    <input type="hidden" name="csrf_token" t-att-value="request.csrf_token()"/>

                    <t t-call="website_my_profile.fields_email"/>

                    <p class="alert alert-danger" t-if="error">
                        <t t-esc="error"/>
                    </p>

                    <input type="hidden" name="redirect" t-att-value="redirect"/>
                    <input type="hidden" name="token" t-att-value="token"/>
                    <div class="clearfix oe_login_buttons">
                        <a href="/my/home" class="btn btn-link pull-right">Go Back Home</a>
                        <button type="submit" class="btn btn-primary pull-left">Confirm</button>
                    </div>
                </form>
                <a href="/my/home" class="btn btn-link pull-right">Go Back Home</a>
            </t>
        </template>
    </data>
</odoo>
