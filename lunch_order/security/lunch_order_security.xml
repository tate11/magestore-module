<?xml version="1.0" ?>
<odoo>
    <record model="ir.module.category" id="module_lunch_order_category">
            <field name="name">Lunch Order</field>
            <field name="description">Helps you handle your lunch needs, if you are a manager you will be able to create new products, cashmoves and to confirm or cancel orders.</field>
            <field name="sequence">17</field>
        </record>
        <record id="group_my_lunch_user" model="res.groups">
            <field name="name">User</field>
            <field name="category_id" ref="module_lunch_order_category"/>
        </record>
        <record id="group_my_lunch_manager" model="res.groups">
            <field name="name">Manager</field>
            <field name="implied_ids" eval="[(4, ref('group_my_lunch_user'))]"/>
            <field name="category_id" ref="module_lunch_order_category"/>
            <field name="users" eval="[(4, ref('base.user_root'))]"/>
        </record>
</odoo>