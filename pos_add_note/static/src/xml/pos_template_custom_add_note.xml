<?xml version="1.0" encoding="utf-8"?>

<templates id="pos_add_note" inherit_id="point_of_sale.template">
    <t t-extend="ActionpadWidget">
        <t t-jquery=".actionpad" t-operation="append">
            <button class="button add-note" type="button">
                <i class='fa fa-pencil-square-o'/>
                Add note
            </button>
        </t>
    </t>
    <t t-extend="PosTicket">
        <t t-jquery=".receipt-change" t-operation="after">
            <br/>
            <table class="receipt-change">
                <tr>
                    <td>Note:</td>
                    <td class="pos-right-align">
                        <t t-esc="order.note"/>
                    </td>
                </tr>
            </table>

        </t>
    </t>
</templates>
