<odoo>
    <data>
        <record model="ir.actions.act_window" id="messagepoint_list_action">
            <field name="name">Message Point</field>
            <field name="res_model">er.messagepoint</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">Create the first message type
                </p>
            </field>
        </record>

        <!-- top level menu: no parent -->
        <menuitem id="main_employeereward_menu" name="Employee Reward"/>

        <menuitem id="employeereward_report_menu" name="Report" parent="main_employeereward_menu" sequence="100"/>
        <!-- A first level in the left side menu is needed
             before using action= attribute -->
        <menuitem id="employeereward_configuration_menu" name="Configuration"
                  parent="main_employeereward_menu" sequence="100"/>
        <!-- the following menuitem should appear *after*
             its parent openacademy_menu and *after* its
             action course_list_action -->
        <menuitem id="employeereward_message_point_menu" name="Message Points"
                  parent="employeereward_configuration_menu"
                  action="messagepoint_list_action" groups="employee_reward.config_menu_admin"/>

        <record id="message_point_form" model="ir.ui.view">
            <field name="name">message.point.form</field>
            <field name="model">er.messagepoint</field>
            <field name="arch" type="xml">
                <form string="Setup Message Points">
                    <sheet>
                        <div class="oe_button_box" name="button_box">
                            <button name="toggle_active" type="object" class="oe_stat_button" icon="fa-archive">
                                <field name="active" widget="boolean_button" options='{"terminology": "archive"}'/>
                            </button>
                        </div>
                        <group colspan="2">
                            <field name="image" widget='image' class="oe_avatar"
                                   options='{"preview_image":"image_medium"}'/>
                            <field name="name"></field>
                            <field name="point"></field>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="message_point_tree" model="ir.ui.view">
            <field name="name">message.point.tree</field>
            <field name="model">er.messagepoint</field>
            <field name="arch" type="xml">
                <tree string="Message Points">
                    <!--<field name="image_medium"></field>-->
                    <field name="name"></field>
                    <field name="point"></field>
                </tree>
            </field>
        </record>

    </data>
</odoo>
