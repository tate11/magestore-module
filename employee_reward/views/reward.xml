<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record model="ir.actions.act_window" id="reward_reward_management_action">
            <field name="name">Reward Management</field>
            <field name="res_model">er.reward</field>
        </record>

        <menuitem id="employeereward_reward_management_menu" name="Reward Management"
                  parent="employeereward_configuration_menu"
                  action="reward_reward_management_action" groups="employee_reward.config_menu_admin"/>

        <!--Reward management kanban view-->
        <record id="reward_reward_management_kanban" model="ir.ui.view">
            <field name="name">reward.reward.management.kanban</field>
            <field name="model">er.reward</field>
            <field name="arch" type="xml">
                <kanban string="Manage Rewards" class="o_er_reward_management_kanban">
                    <templates id="reward_kanban_view">
                        <t t-name="kanban-box">
                            <div class="oe_kanban_global_click">
                                <div class="o_kanban_image">
                                    <img t-att-src="kanban_image('er.reward', 'image_medium', record.id.value)"/>
                                </div>
                                <div class="oe_kanban_details">
                                    <div class="reward-title">
                                        <strong>
                                            <field name="name"/>
                                        </strong>
                                         - <field name="point"/>
                                            Points
                                    </div>
                                    <ul>
                                        <li t-if="record.description.raw_value">
                                            <field name="description"/>
                                        </li>
                                        <li t-if="record.number_available.raw_value > 0">
                                            <strong><field name="number_available"/> <span>Available</span></strong>
                                        </li>
                                        <li t-if="record.number_available.raw_value == 0">
                                            <span class="not_available_notice">Not Available</span>
                                        </li>
                                    </ul>
                                </div>
                            </div>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>

        <!--Reward management list view-->
        <record id="reward_reward_management_tree" model="ir.ui.view">
            <field name="name">reward.reward.management.tree</field>
            <field name="model">er.reward</field>
            <field name="arch" type="xml">
                <tree string="Reward management list">
                    <field name="name"></field>
                    <field name="point"></field>
                    <field name="number_available"></field>
                    <field name="contact_admin"></field>
                </tree>
            </field>
        </record>

        <!--Reward management form-->
        <record id="reward_reward_management_form" model="ir.ui.view">
            <field name="name">reward.reward.management.form</field>
            <field name="model">er.reward</field>
            <field name="arch" type="xml">
                <form string="Reward Management">
                    <sheet>
                        <div class="oe_button_box" name="button_box">
                            <button name="toggle_active" type="object" class="oe_stat_button" icon="fa-archive">
                                <field name="active" widget="boolean_button" options='{"terminology": "archive"}'/>
                            </button>
                        </div>
                        <group>
                            <group>
                                <field name="name"></field>
                                <field name="image" widget='image' class="oe_avatar" options='{"preview_image":"image_medium"}'/>
                            </group>
                            <group>
                                <field name="point"></field>
                                <field name="number_available"></field>
                            </group>
                            <group colspan="4">
                                <field name="description"></field>
                                <field name="email_template"></field>
                                <field name="remark"></field>
                            </group>
                            <group>
                                <!--<field name="contact_admin" context="{'is_admin': 1}"></field>-->
                                <field name="contact_admin"></field>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record model="ir.actions.act_window.view" id="reward_reward_management_kanban_action_view">
            <field name="act_window_id" ref="reward_reward_management_action"/>
            <field name="view_id" ref="reward_reward_management_kanban"/>
            <field name="view_mode">kanban</field>
        </record>

        <record model="ir.actions.act_window.view" id="reward_reward_management_form_action_view">
            <field name="act_window_id" ref="reward_reward_management_action"/>
            <field name="view_id" ref="reward_reward_management_form"/>
            <field name="view_mode">form</field>
        </record>

        <record model="ir.actions.act_window.view" id="reward_reward_management_tree_action_view">
            <field name="act_window_id" ref="reward_reward_management_action"/>
            <field name="view_id" ref="reward_reward_management_tree"/>
            <field name="view_mode">tree</field>
        </record>
    </data>
</odoo>
