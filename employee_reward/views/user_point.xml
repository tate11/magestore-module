<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record model="ir.ui.view" id="user_point_view">
            <field name="name">User Point</field>
            <field name="model">hr.employee</field>
            <field name="inherit_id" ref="hr.view_employee_form"/>
            <field name="arch" type="xml">
                <xpath expr="//notebook/page[last()]">
                    <group string="User Point">
						<!--<field name="usr_manual_reset" invisible="1" />-->
                        <field name="usr_reset_point" string="User Point" attrs="{'readonly': True}"/>
						<field name="usr_balance_point" string="Balance Point" attrs="{'readonly': True}"/>
						<field name="usr_receive_point" string="Receive Point" attrs="{'readonly': True}"/>
						<field name="usr_redeem_point" string="Redeem Point" attrs="{'readonly': True}"/>
                        <field name="usr_sent_point" string="Sent Point" attrs="{'readonly': True}"/>
                    </group>
                </xpath>
            </field>
        </record>
    </data>
</odoo>
