<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record model="ir.actions.act_window" id="message_wall_list_action">
            <field name="name">Message Wall</field>
            <field name="res_model">er.message</field>
            <field name="view_type">form</field>
            <!--<field name="view_mode">kanban,tree,form</field>-->
            <!--<field name="help" type="html">-->
                <!--<p class="oe_view_nocontent_create">Create the first message</p>-->
            <!--</field>-->
        </record>

        <menuitem id="employeereward_message_wall_menu" name="Message Wall" parent="main_employeereward_menu"
                  action="message_wall_list_action" sequence="1"/>

        <!--User Message Wall form view-->
        <record id="message_wall_form" model="ir.ui.view">
            <field name="name">message.wall.form</field>
            <field name="model">er.message</field>
            <field name="arch" type="xml">
                <form string="Send a message" edit="false">
                    <sheet>
                        <!--<div class="oe_button_box" name="button_box">-->
                            <!--<button name="toggle_active" type="object" class="oe_stat_button" icon="fa-archive">-->
                                <!--<field name="active" widget="boolean_button" options='{"terminology": "archive"}'/>-->
                            <!--</button>-->
                        <!--</div>-->
                        <div class="message-header">
                            <div class="receiver-avatar">
                                <field name="receiver_image" attrs="{'invisible': [('receiver_image', '=', False)]}"/>
                            </div>
                            <!--<div class="default-receivers-avatar" attrs="{'invisible': ['|', ('id', '=', False), ('receiver_count', '>', 1)]}">-->
                                <!--<img src="employee-reward/static/src/img/default_image.png" width="64" height="64" class="oe_kanban_avatar pull-right"/>-->
                            <!--</div>-->


                            <!--<field name="receiver_image" widget='image' class="oe_avatar"  options='{"preview_image":"receiver_image_medium"}' attrs="{'invisible': ['|', ('id', '=', False), ('receiver_image', '=', False)]}"/>-->


                            <div class="point-center-column">
                                <div class="" attrs="{'invisible':[('id', '>', 0)]}">
                                    <div class="balance-point right-column-content" attrs="{}">
                                        <div class="lable-content">Point available</div>
                                        <div class="value-content">
                                            <field name="balance_point"/>
                                        </div>
                                    </div>

                                    <div class="message-title right-column-content">
                                        <div class="lable-content">
                                            <field name="message_title" attrs="{ 'readonly':True, 'invisible': [('message_title', '=', False)]}"/>
                                        </div>
                                        <div class="value-content">
                                            <field name="sending_point" attrs="{'readonly':True, 'invisible':[('sending_point', '=', 0)]}"/>
                                        </div>
                                    </div>

                                    <div class="remaining-point right-column-content" attrs="{}">
                                        <div class="lable-content">Remaining Point</div>
                                        <div class="value-content">
                                            <field name="remaining_point" attrs="{'readonly':True, 'invisible': [('id', '>', 0)]}"/>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="message-image" style="">
                                <field name="image" widget='image' class="oe_avatar"  options='{"preview_image":"image_medium"}' attrs="{'invisible': [('image', '=', False)]}"/>
                            </div>
                        </div>

                        <group>
                            <group>
                                <field name="name" invisible="1"/>
                                <field name="receiver_title" invisible="1"/>
                                <field name="receiver_count" invisible="1"/>
                                <field name="receiver_num" invisible="1"/>
                                <field name="id" invisible="1"/>
                                <field name="active" invisible="1"/>
                                <field name="message_type" attrs="{'required':True}"></field>
                                <!--<field name="html_text"></field>-->
                            </group>
                            <group colspan="2">
                                <field name="quality_id" widget="many2many_tags" attrs="{'required': True}"></field>
                                <field name="quality_title" type="text" attrs="{ 'invisible': 1}"></field>
                                <field name="department_id" attrs="{'invisible': ['&amp;', ('id', '>', 0), ('department_id', '=', False)], 'required': [('receiver_count', '=', 0)]}"></field>
                                <field name="receiver" widget="many2many_tags" attrs="{'invisible': ['&amp;' ,('id', '>', 0), ('receiver_num', '=', 0)], 'required': [('receiver_count', '=', 0)]}"></field>
                                <field name="message" type="text"></field>
                                <field name="member_liked_ids" widget="many2many_tags" attrs="{'invisible':['|', ('id', '=', False), ('is_liked', '=', 1)], 'readonly':True}"></field>
                                <field name="member_liked_title" invisible="1"></field>
                                <field name="is_liked" invisible="1"></field>

                            </group>
                        </group>

                        <div class="er-message">
                            <div class="er-message-left-column">
                                <div class="sender-information">
                                    <div class="oe_title">
                                        <div class="sender-avatar">
                                            <!--<field name="sender_image" widget='image' class="oe_avatar"  options='{"preview_image":"sender_image_medium"}' />-->
                                            <!--<img src="/web/image?model=hr.employee&amp;field=image_medium&amp;id=1"/>-->
                                            <field name="sender_image"/>
                                        </div>
                                        <h5>
                                            From: <field name="sender" attrs="{'readonly':True}"/>
                                        </h5>
                                    </div>
                                </div>
                            </div>
                            <div class="er-message-right-column">
                                <div class="like-comment-information" attrs="{'invisible':[('id', '=', False)]}">

                                    <button name="like_action" string="Like" type="object" class="btn-primary" icon="fa-thumbs-o-up" attrs="{'invisible':[('is_liked', '=', 1)]}">
                                        <field name="like_number" attrs="{'readonly':True}"/>
                                    </button>

                                    <div class="" attrs="{'invisible':['|', ('is_liked', '=', 0), ('like_number', '=', 0)]}"><i class="fa fa-thumbs-o-up" aria-hidden="true"></i><field name="like_number"/></div>
                                </div>
                                <div class="comment-number" attrs="{'invisible':[('comment_count', '=', 0)]}">
                                    <i class="fa fa-comment-o" aria-hidden="true"></i> <field name="comment_count"/>
                                </div>
                                <div class="report-to-admin">

                                        <!--<button name="toggle_active" type="object" class="oe_stat_button" icon="fa-archive">-->
                                            <!--<field name="active" widget="boolean_button" options='{"terminology": "archive"}'/>-->
                                        <!--</button>-->
                                        <button type="object" name="toggle_active" class="btn btn-sm btn-default fa fa-stop-circle" attrs="{'invisible':[('active','=',False)]}" String="Report to admin"> </button>
                                        <button type="object" name="toggle_active" class="btn btn-sm btn-default fa fa-stop-circle" attrs="{'invisible':[('active','=',True)]}" String="Restore message"></button>

                                    <!--<div class="oe_button_box" name="button_box">-->
                                    <!--<button string="Report to Admin" type="object" name="report_to_admin" class="btn btn-sm btn-default fa fa-stop-circle" attrs="{'invisible':['|', ('active','=',False), ('id','=',False)]}"> Report to admin </button>-->
                                        <!--<button name="toggle_active" type="object" class="oe_stat_button" icon="fa-archive" group="">-->
                                            <!--<field name="active" widget="boolean_button" options='{"terminology": "archive"}'/>-->
                                        <!--</button>-->
                                    <!--</div>-->
                                </div>
                            </div>
                        </div>

                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers"/>
                        <field name="message_ids" widget="mail_thread"/>
                    </div>
                </form>
            </field>
        </record>

        <!--User Message wall kanban view-->
        <record id="er_user_message_wall_kanban" model="ir.ui.view">
            <field name="name">er.user.message.wall.kanban</field>
            <field name="model">er.message</field>
            <field name="arch" type="xml">
                <kanban string="User Message Wall" class="o_er_user_message_wall_kanban">
                    <field name="receiver"/>
                    <field name="sender"/>
                    <field name="quality_id"/>
                    <field name="active"/>
                    <field name="member_liked_ids"/>
                    <field name="receiver_count"/>
                    <field name="department_id"/>
                    <field name="single_receiver"/>
                    <field name="message_type"/>
                    <templates id="er_user_message_wall_kanban_view">
                        <t t-name="kanban-box">
                            <div class="oe_kanban_global_click">
                                <div class="">
                                    <ul>
                                        <li>
                                            <div class="left-column">
                                                <div class="o_kanban_image">
                                                    <t t-if="record.receiver.raw_value.length == 1 and record.receiver_count.raw_value == 1">
                                                        <img t-att-src="kanban_image('hr.employee', 'image_medium', record.single_receiver.raw_value)"/>
                                                    </t>
                                                    <t t-if="record.receiver.raw_value.length != 1  or record.department_id.raw_value">
                                                        <img t-att-src="'employee-reward/static/src/img/default_image.png'" width="64" height="64" class="oe_kanban_avatar pull-right"/>
                                                    </t>
                                                </div>
                                                <div class="receiver-information">
                                                    <div class="">To: <strong><field name="department_id"></field><span attrs="{'invisible':['|',('department_id', '=', False),('receiver_title', '=', False)]}">, </span><field name="receiver_title"></field></strong></div>
                                                </div>
                                                <div class="quality-information">
                                                    Quality: <strong><field name="quality_title"></field></strong>
                                                </div>
                                                <div class="message-type">
                                                    Message type: <field name="message_type"/>
                                                </div>
                                                <div class="message-content">
                                                    Message: <field name="message"/>
                                                </div>

                                            </div>
                                            <div class="right-column">
                                                <div class="o_kanban_image">
                                                    <img t-att-src="kanban_image('er.message', 'image_medium', record.id.value)" width="64" height="64"/>
                                                </div>
                                                <p class="message-point">
                                                    <field name="message_point"/> Points
                                                </p>
                                            </div>
                                        </li>

                                        <li class="sender-information">
                                            <div class="left-column">
                                                <div class="o_kanban_image">
                                                    <img t-att-src="kanban_image('hr.employee', 'image_medium', record.sender.raw_value)"/>
                                                </div>
                                                <div class="sender-information">
                                                    <strong>From: </strong><field name="sender"/>
                                                </div>
                                                <div class="created-time">
                                                    <field name="created_time"/>
                                                </div>
                                            </div>
                                            <div class="right-column">
                                                <div class="like-number">
                                                    <i class="fa fa-thumbs-o-up" aria-hidden="true"></i> <field name="like_number"/>

                                                    <!--<t t-foreach="record.member_liked_ids.__attrs" t-as="member">-->

                                                        <!--<img t-att-src="member['name']"/>-->
                                                        <!--<t t-field="member['name']"></t>-->
                                                    <!--</t>-->
                                                </div>
                                                <div class="comment-number">
                                                    <i class="fa fa-comment-o" aria-hidden="true"></i> <field name="comment_count"/>
                                                </div>
                                                <div class="report-to-admin">
                                                    <button type="object" name="report_to_admin" class="btn btn-sm btn-default fa fa-stop-circle" attrs="{'invisible':[('active','=',False)]}"> Report to admin </button>
                                                    <button type="object" name="report_to_admin" class="btn btn-sm btn-default fa fa-stop-circle" attrs="{'invisible':[('active','=',True)]}"> Restore message </button>
                                                    <!--<button type="object" name="count_comment_quantity">Check</button>-->
                                                </div>
                                            </div>
                                        </li>
                                    </ul>
                                </div>
                            </div>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>

        <!--User Message wall Searching view-->
        <record id="er_user_message_wall_search" model="ir.ui.view">
            <field name="name">er.user.message.wall.search</field>
            <field name="model">er.message</field>
            <field name="arch" type="xml">
                <search String="User Message Wall">
                    <field name="name"/>
                    <field name="quality_title"/>
                    <field name="message_type"/>
                    <field name="receiver_title"/>
                    <field name="sender"/>
                    <field name="active"/>
                </search>
            </field>
        </record>

        <record id="er_user_message_wall_tree" model="ir.ui.view">
            <field name="name">er.user.message.wall.kanban.tree</field>
            <field name="model">er.message</field>
            <field name="arch" type="xml">
                <tree String="User Message Wall">
                    <field name="name"/>
                    <field name="quality_title"/>
                    <field name="message_type"/>
                    <field name="receiver"/>
                    <field name="sender"/>
                    <field name="active"/>
                </tree>
            </field>
        </record>
        <record model="ir.actions.act_window.view" id="er_user_message_wall_kanban_action_view">
            <field name="act_window_id" ref="message_wall_list_action"/>
            <field name="view_id" ref="er_user_message_wall_kanban"/>
            <field name="view_mode">kanban</field>
        </record>

        <record model="ir.actions.act_window.view" id="er_user_message_wall_tree_action_view">
            <field name="act_window_id" ref="message_wall_list_action"/>
            <field name="view_id" ref="er_user_message_wall_tree"/>
            <field name="view_mode">tree</field>
        </record>

    </data>
</odoo>
