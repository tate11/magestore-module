<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record model="ir.actions.act_window" id="reward_reward_user_action">
            <field name="name">User Reward</field>
            <field name="res_model">er.reward</field>
        </record>

        <menuitem id="employeereward_reward_user_menu" name="Rewards" parent="main_employeereward_menu" sequence="10"/>
        <menuitem id="er_reward_user_menu" name="Redeem" parent="employeereward_reward_user_menu"
                  action="reward_reward_user_action" sequence="10"/>

        <!--Reward user form view-->
        <record id="reward_reward_user_form" model="ir.ui.view">
            <field name="name">User Reward</field>
            <field name="model">er.reward</field>
            <field name="arch" type="xml">
                <form string="Reward" edit="false" create="false" delete="false">
                    <sheet>
                        <div class="oe_button_box" name="button_box">
                            <button string="Redeem" type="object" name="action_redeem_reward"
                                        class="oe_stat_button" icon="fa-arrows-v"/>
                        </div>
                        <group>
                            <group>
                                <field name="name"/>
                                <field name="image" widget='image' class="oe_avatar"
                                       options='{"preview_image":"image_medium"}'/>
                            </group>
                            <group>
                                <field name="point"/>
                                <field name="number_available"/>
                            </group>
                            <group colspan="4">
                                <field name="description"/>
                                <!--<field name="email_template"/>-->
                                <!--<field name="remark"/>-->
                            </group>
                            <group>
                                <!--<field name="contact_admin" context="{'is_admin': 1}"></field>-->
                                <field name="contact_admin"/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <!--Reward user kanban view-->
        <record id="reward_reward_user_kanban" model="ir.ui.view">
            <field name="name">reward.reward.management.kanban</field>
            <field name="model">er.reward</field>
            <field name="arch" type="xml">
                <kanban string="All Rewards" class="o_er_reward_management_kanban" create="false">
                    <templates id="reward_user_kanban_view">
                        <t t-name="kanban-box">
                            <field name="reward_missing_point" attrs="{'invisible': '1'}"/>
                            <field name="reward_status" attrs="{'invisible': '1'}"/>
                            <div class="oe_kanban_global_click">
                                <div class="o_kanban_image">
                                    <img t-att-src="kanban_image('er.reward', 'image_medium', record.id.value)"/>
                                </div>
                                <div class="oe_kanban_details">
                                    <div class="reward-title">
                                        <strong>
                                            <field name="name"/>
                                        </strong>
                                         - <field name="point"/>
                                            Points
                                    </div>
                                    <ul>
                                        <li t-if="record.description.raw_value">
                                            <field name="description"/>
                                        </li>
                                        <li t-if="record.number_available.raw_value > 0">
                                            <strong><field name="number_available"/> <span>Available</span></strong>
                                        </li>
                                        <li t-if="record.number_available.raw_value == 0">
                                            <span class="not_available_notice">Not Available</span>
                                        </li>
                                    </ul>
                                </div>
                                <div>
                                    <!--You need <t t-esc="record.reward_status.value"/> to redeem.-->
                                    <span t-if="record.reward_status.value == 1">
                                        You need <t t-esc="record.reward_missing_point.value"/> to redeem.
                                    </span>
                                    <span t-if="record.reward_status.value == 2">
                                        Available for redeem</span>
                                </div>
                            </div>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>

        <!-- Reward user tree view-->
        <!--Reward management list view-->
        <record id="reward_reward_user_tree" model="ir.ui.view">
            <field name="name">reward.reward.user.tree</field>
            <field name="model">er.reward</field>
            <field name="arch" type="xml">
                <tree string="Reward management list" create="false">
                    <field name="name"></field>
                    <field name="point"></field>
                    <field name="number_available"></field>
                    <field name="contact_admin"></field>
                </tree>
            </field>
        </record>

        <record model="ir.actions.act_window.view" id="reward_reward_user_action_kanban_view">
            <field name="act_window_id" ref="reward_reward_user_action"/>
            <field name="view_id" ref="reward_reward_user_kanban"/>
            <field name="view_mode">kanban</field>
        </record>

        <record model="ir.actions.act_window.view" id="reward_reward_user_action_tree_view">
            <field name="act_window_id" ref="reward_reward_user_action"/>
            <field name="view_id" ref="reward_reward_user_tree"/>
            <field name="view_mode">tree</field>
        </record>

        <record model="ir.actions.act_window.view" id="reward_reward_user_action_form_view">
            <field name="act_window_id" ref="reward_reward_user_action"/>
            <field name="view_id" ref="reward_reward_user_form"/>
            <field name="view_mode">form</field>
        </record>
    </data>
</odoo>
