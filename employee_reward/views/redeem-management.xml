<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record model="ir.actions.act_window" id="redeem_management_list_action">
            <field name="name">Redeem</field>
            <field name="res_model">er.reward.history</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">Create the first redeem</p>
            </field>
        </record>
        <menuitem id="redeem_management_menu" name="Redeem Management" parent="employeereward_configuration_menu"
                  action="redeem_management_list_action" groups="employee_reward.config_menu_admin"/>

        <!-- User reward history tree view -->
        <record model="ir.ui.view" id="reward_admin_tree">
            <field name="name">reward.admin.tree</field>
            <field name="model">er.reward.history</field>
            <field name="arch" type="xml">
                <tree string="Redemption Management">
                    <field name="name" string="Reward"/>
                    <field name="history_reward_point" string="Point"/>
                    <field name="history_user" string="User"/>
                    <field name="history_requested_date" string="Requested date"/>
                    <field name="history_completed_date" string="Completed date"/>
                    <field name="history_status" string="Status"/>
                    <!-- For admin only -->
                    <button string="Approved" name="set_approved" type="object"
                            attrs="{'invisible': [('history_status', '=', 'approved')]}"/>
                    <button string="Denied" name="set_denied" type="object"
                            attrs="{'invisible': [('history_status', '=', 'approved')]}"/>
                    <button string="Check" name="get_user" type="object"/>
                </tree>
            </field>
        </record>
    </data>
</odoo>
