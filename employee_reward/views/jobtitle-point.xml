<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record model="ir.actions.act_window" id="jobtitle_point_list_action">
            <field name="name">Job Title Point</field>
            <field name="res_model">er.point</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">Create the first job title point</p>
            </field>
        </record>

        <record model="ir.ui.view" id="job_title_tree_view">
            <field name="name">Job Title Point</field>
            <field name="model">er.point</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="job_id"/>
                    <field name="monthly_point"/>
                    <field name="user_count"/>
                </tree>
            </field>
        </record>

        <record id="jobtitle_point_form" model="ir.ui.view">
            <field name="name">jobtitle.point.form</field>
            <field name="model">er.point</field>
            <field name="arch" type="xml">
                <form string="Setup Job Title Points">
                    <sheet>
                        <div class="oe_button_box" name="button_box">
                            <button name="toggle_active" type="object" class="oe_stat_button" icon="fa-archive">
                                <field name="active" widget="boolean_button" options='{"terminology": "archive"}'/>
                            </button>
                        </div>
                        <group colspan="2">
                            <field name="job_id" string="Job Title"/>
                            <field name="monthly_point" string="Monthly Points Allocation"/>
                        </group>
                        <group colspan="2">
                            <field name="user_count" string="Number of Users"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <menuitem id="jobpoint_menu" name="Job Title Points" parent="employeereward_configuration_menu"
                  action="jobtitle_point_list_action" groups="employee_reward.config_menu_admin"/>
    </data>
</odoo>
