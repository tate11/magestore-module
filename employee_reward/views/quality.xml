<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record model="ir.actions.act_window" id="quality_list_action">
            <field name="name">Quality Management</field>
            <field name="res_model">er.quality</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">Create the first quality
                </p>
            </field>
        </record>

        <menuitem id="employeereward_quality_menu" name="Quality Management" parent="employeereward_configuration_menu"
                  action="quality_list_action" groups="employee_reward.config_menu_admin"/>

        <record id="quality_form" model="ir.ui.view">
            <field name="name">quality.form</field>
            <field name="model">er.quality</field>
            <field name="arch" type="xml">
                <form string="Setup Quality">
                    <sheet>
                        <div class="oe_button_box" name="button_box">
                            <button name="toggle_active" type="object" class="oe_stat_button" icon="fa-archive">
                                <field name="active" widget="boolean_button" options='{"terminology": "archive"}'/>
                            </button>
                        </div>
                        <group colspan="2">
                            <field name="name"></field>
                            <field name="title"></field>
                            <field name="statement"></field>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>
        <record id="quality_tree" model="ir.ui.view">
            <field name="name">quality.tree</field>
            <field name="model">er.quality</field>
            <field name="arch" type="xml">
                <tree string="Quality List">
                    <field name="name"></field>
                    <field name="title"></field>
                    <field name="partner_id"></field>
                    <field name="create_date" widget="date"></field>
                </tree>
            </field>
        </record>
    </data>
</odoo>
