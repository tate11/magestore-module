<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <data>
        <!--action window for manager book type-->
        <act_window id="act_manage_book_type" name="Manager book type" res_model="library.manager.book.type"/>
        <record id="action_all_customers_form"
                model="ir.actions.act_window.view">
            <field name="act_window_id" ref="action_all_customers"/>
            <field name="view_id" ref="form_all_customers"/>
            <field name="view_mode">form</field>
            <field name="sequence">10</field>
        </record>
        <!--action window for manager book-->
        <act_window id="act_manage_book" name="Manager book" res_model="library.manager.book"/>
        <!--action window for student-->
        <act_window id="act_manage_student" name="Manager student" res_model="library.manager.student"/>


        <menuitem id="library_manage_menuitem" parent="" sequence="1"
                  name="Library manager"/>
        <menuitem id="book_type_menuitem" parent="library_manage_menuitem" sequence="1"
                  name="Manager book type" action="act_manage_book_type"/>
        <menuitem id="book_manage_menuitem" parent="library_manage_menuitem" sequence="2"
                  name="Book manager" action="act_manage_book"/>
        <menuitem id="student_manage_menuitem" parent="library_manage_menuitem" sequence="3"
                  name="Student manager" action="act_manage_student"/>
        <!--view all book type-->
        <record id="book_type_view" model="ir.ui.view">
            <field name="name">List of book type</field>
            <field name="model">library.manager.book.type</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="id"/>
                    <field name="name"/>
                    <field name="book_author"/>
                    <field name="book_publisher"/>
                    <field name="book_count"/>
                    <field name="book_available"/>
                </tree>
            </field>
        </record>
        <!--view all book-->
        <record id="book_view" model="ir.ui.view">
            <field name="name">List of book</field>
            <field name="model">library.manager.book</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="id"/>
                    <field name="book_type"/>
                    <field name="book_borrow"/>
                </tree>
            </field>
        </record>
        <!--view all student-->
        <record id="student_view" model="ir.ui.view">
            <field name="name">List of Students</field>
            <field name="model">user.model</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                    <field name="email"/>
                </tree>
            </field>
        </record>

    </data>
</odoo>