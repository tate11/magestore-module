<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="wizard_export_contact" model="ir.ui.view">
            <field name="name">Export Contact</field>
            <field name="model">export.contact.wizard</field>
            <field name="arch" type="xml">
                <form string="Export Contact">
                    <group>
                        <!--<function model="sale.order" name="action_confirm" eval="[[ref('sale_order_2')]]"/>-->
                        <h2>Export Complete</h2>
                        <!--<p>Here is the exported file: <field name="data" readonly="1" filename="name"/></p>-->
                    </group>
                    <footer>
                        <button special="cancel" string="Close" type="object" class="btn-primary"/>
                    </footer>
                </form>
            </field>
        </record>

        <record id="action_wizard_export_contact" model="ir.actions.act_window">
            <field name="name">Export Contact</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">export.contact.wizard</field>
            <field name="src_model">res.partner</field>
            <field name="view_type">form</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
        </record>

        <act_window name="Export Contact"
                    res_model="export.contact.wizard"
                    src_model="res.partner"
                    view_mode="form"
                    multi="True"
                    target="new"
                    id="action_export_vcard"
        />

    </data>
</odoo>
