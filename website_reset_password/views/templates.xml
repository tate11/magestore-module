<odoo>
    <data>
        <template id="more_attribute_for_email" inherit_id="website_portal.details">
            <xpath expr="//input[@type='email']" position="attributes">
                <attribute name="readonly">readonly</attribute>
            </xpath>
        </template>

        <template id="button_reset_password_and_email" inherit_id="website_portal.details">
            <xpath expr="//div[@class='col-md-8']/div[@class='row']" position="before">
                <div class="clearfix">
                    <a href="/web/reset_password_direct" class="btn btn-default btn-primary pull-right">Change Password
                    </a>
                    <div class="clearfix">
                        <a href="/web/change_email" class="btn btn-default btn-primary pull-left">Change Email</a>
                    </div>
                </div>
            </xpath>
        </template>

        <template id="website_reset_password.fields_reset" name="Reset password fields">
            <div class="form-group field-old_password">
                <label for="old_password" class="control-label">Old Password</label>
                <input type="password" name="old_password" id="old_password" class="form-control"
                       required="required"/>
            </div>

            <div class="form-group field-new_password">
                <label for="new_password" class="control-label">New Password</label>
                <input type="password" name="new_password" id="new_password" class="form-control"
                       required="required"/>
            </div>

            <div class="form-group field-retype_password">
                <label for="retype_password" class="control-label">Retype New Password</label>
                <input type="password" name="retype_password" id="retype_password" class="form-control"
                       required="required"/>
            </div>
        </template>

        <template id="website_reset_password.form_reset" name="Reset password form">
            <t t-call="web.login_layout">
                <p class="alert alert-success" t-if="message">
                    <t t-esc="message"/>
                </p>

                <form class="oe_reset_password_form" role="form" method="post" t-if="not message">
                    <input type="hidden" name="csrf_token" t-att-value="request.csrf_token()"/>

                    <t t-call="website_reset_password.fields_reset"/>

                    <p class="alert alert-danger" t-if="error">
                        <t t-esc="error"/>
                    </p>

                    <input type="hidden" name="redirect" t-att-value="redirect"/>
                    <input type="hidden" name="token" t-att-value="token"/>
                    <div class="clearfix oe_login_buttons">
                        <a href="/my/home" class="btn btn-link pull-right">Go Back Home</a>
                        <button type="submit" class="btn btn-primary pull-left">Confirm</button>
                    </div>
                </form>
                <a href="/my/home" class="btn btn-link pull-right">Go Back Home</a>
            </t>
        </template>

        <template id="website_reset_password.fields_email" name="Change email fields">
            <div class="form-group field-email">
                <label for="email" class="control-label">Your Email</label>
                <input type="text" name="email" id="email" class="form-control"
                       required="required"/>
            </div>

            <div class="form-group field-password">
                <label for="password" class="control-label">Your Password</label>
                <input type="password" name="password" id="password" class="form-control"
                       required="required"/>
            </div>
        </template>

        <template id="website_reset_password.form_email" name="Change email form">
            <t t-call="web.login_layout">
                <p class="alert alert-success" t-if="message">
                    <t t-esc="message"/>
                </p>
                <form class="oe_reset_password_form" role="form" method="post" t-if="not message">
                    <input type="hidden" name="csrf_token" t-att-value="request.csrf_token()"/>

                    <t t-call="website_reset_password.fields_email"/>

                    <p class="alert alert-danger" t-if="error">
                        <t t-esc="error"/>
                    </p>

                    <input type="hidden" name="redirect" t-att-value="redirect"/>
                    <input type="hidden" name="token" t-att-value="token"/>
                    <div class="clearfix oe_login_buttons">
                        <a href="/my/home" class="btn btn-link pull-right">Go Back Home</a>
                        <button type="submit" class="btn btn-primary pull-left">Confirm</button>
                    </div>
                </form>
                <a href="/my/home" class="btn btn-link pull-right">Go Back Home</a>
            </t>
        </template>
    </data>
</odoo>
