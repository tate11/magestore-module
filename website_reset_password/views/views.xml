<?xml version="1.0" encoding="UTF-8"?>
<odoo>
  <data>
    <record id="check_email_view_view_users_form" model="ir.ui.view">
      <field name="name">check.email.view.view.users.form</field>
      <field name="model">res.users</field>
      <field name="inherit_id" ref="base.view_users_form">
      </field>
      <field name="arch" type="xml">
        <xpath expr="//field[@name='login']" position="attributes">
          <attribute name="placeholder">e.g. mars@vip.org</attribute>
        </xpath>
      </field>
    </record>
  </data>
</odoo>