<odoo>
    <!--noupdate="1" will create this record only once time-->
    <!--if not, it will create new record every time you update or reinstall the module-->
    <data noupdate="1">
        <!--because fetchmail.server belong to fetchmail module
        >>> you need to add fetchmail module to depends of this module-->
        <record id="incoming_gmail_pop_server" model="fetchmail.server">
            <field name="name">Incoming Gmail Server</field>
            <field name="server">pop.gmail.com</field>
            <field name="type">pop</field>
            <field name="port">995</field>
            <field name="is_ssl">True</field>
            <field name="user">mars@trueplus.com</field>
            <field name="password">marsorxmars</field>
            <field name="state">done</field>
        </record>
        <function model="ir.mail_server" name="change_smtp_local_server"/>
    </data>
</odoo>
