<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="wizard_export_product" model="ir.ui.view">
            <field name="name">Export Product</field>
            <field name="model">export.product.wizard</field>
            <field name="arch" type="xml">
                <form string="Export Product">
                    <field invisible="1" name="state"/>
                    <field name="name" invisible="1"/>
                    <group states="choose" string="Export Settings">
                        <field name="stock_location_id" domain="[('usage','=','internal')]"/>
                        <field name="file_type"/>
                    </group>
                    <div states="get">
                        <h2>Export Complete</h2>
                        <p>Here is the exported file: <field name="data" readonly="1" filename="name"/></p>
                    </div>
                    <footer states="choose">
                        <button name="do_export" string="Export" type="object" class="btn-primary"/>
                        <button special="cancel" string="Cancel" type="object" class="btn-default"/>
                    </footer>
                    <footer states="get">
                        <button special="cancel" string="Close" type="object" class="btn-primary"/>
                    </footer>
                </form>
            </field>
        </record>

        <record id="action_wizard_export_product" model="ir.actions.act_window">
            <field name="name">Export Product</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">export.product.wizard</field>
            <field name="view_type">form</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
        </record>

        <menuitem id="menu_wizard_lang_export" action="action_wizard_export_product" />
    </data>
</odoo>
